Algoritmo ejercicio_39
	Definir a,indice,indice1 Como Entero
	Dimension a[20]	
	Para indice <- 1 Hasta 20 Con Paso 1 Hacer
		Escribir "ingrese un numero"
		Leer a[indice]
	FinPara
	Para indice <- 1 Hasta 20 Con Paso 1 Hacer
		indice1 <- 2
		Mientras indice1 < a[indice] & a[indice] % indice1 <> 0 HACER
			indice1 <- indice1 + 1
		FinMientras
		Si (indice1 = a[indice]) Entonces
			Escribir a[indice], " es primo"
		FinSi
	FinPara
FinAlgoritmo
